<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="450.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="forgotpass.ForgotpasswordController">
   <children>
      <FontAwesomeIconView glyphName="ARROW_LEFT" layoutX="14.0" layoutY="35.0" onMouseClicked="#backToLogin" size="20" />
      <FontAwesomeIconView glyphName="CLOSE" layoutX="426.0" layoutY="35.0" onMouseClicked="#closeApp" size="20" />
      <Label layoutX="123.0" layoutY="54.0" text="Forgot Password">
         <font>
            <Font name="Impact" size="30.0" />
         </font>
      </Label>
      <Label layoutX="136.0" layoutY="100.0" text="Recover your password here.">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="131.0" layoutY="155.0" text="Personal Information" textFill="#7c7c7c">
         <font>
            <Font name="Impact" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="accountno" layoutX="65.0" layoutY="214.0" prefHeight="38.0" prefWidth="340.0" promptText="Your Account No" styleClass="field-decoration" stylesheets="@../design/design.css">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="ans" layoutX="65.0" layoutY="347.0" prefHeight="38.0" prefWidth="340.0" promptText="Answer" styleClass="field-decoration" stylesheets="@../design/design.css">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <ComboBox fx:id="sq" layoutX="65.0" layoutY="281.0" prefHeight="38.0" prefWidth="340.0" promptText="Security Question" styleClass="field-decoration" stylesheets="@../design/design.css" />
      <Button layoutX="125.0" layoutY="418.0" mnemonicParsing="false" onMouseClicked="#recoverPassword" prefHeight="35.0" prefWidth="200.0" styleClass="login-button" stylesheets="@../design/design.css" text="Recover Password">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
